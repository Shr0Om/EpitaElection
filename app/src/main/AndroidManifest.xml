<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epita.epitaelection">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EpitaElection">
        <activity
            android:name=".WinView"
            android:exported="false" />
        <activity
            android:name=".View.Game.Game"
            android:exported="false"
            android:label="@string/title_activity_game"
            android:theme="@style/Theme.EpitaElection.NoActionBar" />
        <activity
            android:name=".View.CharacterChoice.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.EpitaElection.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>